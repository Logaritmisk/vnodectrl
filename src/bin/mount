#!/bin/bash

# api_version=1


mount_info() {
    echo "Mount guest system on host"
}

mount_exec() {
    mount | egrep "^$(echo $(vnode_identity_get 'guest_addr') | sed 's/\./\\\./g'):/srv on.*$" > /dev/null
    
    if [ $? -eq 0 ]; then
        echo "There is already a mount."
        return 1
    fi


    sudo mount -oactimeo=3 $(vnode_identity_get 'guest_addr'):/srv $(vnode_identity_get 'srv_folder')
}
